<h1>Edit Your MyRecipe</h1>
<br>
<br>
<form action="/recipes/<%=@recipe.id%>" method="POST">
<input type="hidden" name="_method" value="patch">
<label for="name"> Recipe Name:</label>
<input type="text" name="recipe[name]" value= "<%=@recipe.name%>">
<br>
<label for="description"> Recipe:</label>
<textarea name="recipe[description]" cols="50" rows="20"><%=@recipe.description%></textarea>
<br>
<label for="ingredients"> Ingredients:</label>
<input type ="text" name="ingredients[][name]" value = "<%=@ingredient0%>">
<input type ="text" name="ingredients[][name]" value = "<%=@ingredient1%>">
<input type ="text" name="ingredients[][name]" value = "<%=@ingredient2%>">
<input type="submit">
</form>
